(library
 ((name ppx_quickcheck_test_examples)
  (libraries (base base_quickcheck))
  ;; Apply only ppx_quickcheck so *_pp.output files (generated below) do not reflect
  ;; changes in other ppx extensions.
  (preprocess (pps (ppx_quickcheck ppxlib.runner)))))

(alias
 ((name DEFAULT)
  (deps (
    ppx_quickcheck_test_examples_ml_pp.output
    ppx_quickcheck_test_examples_mli_pp.output
    ))))

(rule
 ((targets (ppx_quickcheck_test_examples_ml_pp.output))
  (deps (ppx_quickcheck_test_examples.ml.pp))
  (action (bash "cp ${<} ${@}"))))

(rule
 ((targets (ppx_quickcheck_test_examples_mli_pp.output))
  (deps (ppx_quickcheck_test_examples.mli.pp))
  (action (bash "cp ${<} ${@}"))))

(jbuild_version 1)
